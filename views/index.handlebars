<div class="container">
    
   
<h1 class="text-center">Eat Da Burger</h1>
    <div class="row">
        <div class="col-md-4">
            {{#each burgers}}
            {{#unless this.devoured}}
            <ul>    
                <li>
                    {{this.burger_name}}<button>Devour it</button>
                </li>
            </ul> 
            {{/unless}}
            {{/each}}   
        </div>
    </div>     
        
<div class="col-md-4">
    <ul>
        <li>
            <h4>Eaten Burgers</h4>
        </li>
            {{#each burgers}}
            {{#if this.devoured}}
        <li>
            <div>
            {{this.burger_name}}
            </div>
        </li>
        {{/if}}
        {{/each}}
    </ul>
</div>  

    <div class="col-md-4">
        <p>Add a burger</p>
        <input id="burgerInput" type="text" placeholder="example burger">
        <button id="submitButton" type="submit" name="action">Submit</button>
    </div>
</div>
